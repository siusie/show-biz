@model IEnumerable<ShowBiz.Models.ActorBaseViewModel>

@{
    ViewBag.Title = "All Actors";
    var userAccount = new ShowBiz.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Actor List</h2>

@if (userAccount.HasRoleClaim("Executive"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlternateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.AlternateName == null)
                {
                    <span style="color: #8C8F8F"><em>none</em></span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.AlternateName)
                }
            </td>
            <td>
                @if (item.BirthDate == null)
                {
                    <span style="color: #8C8F8F"><em>none</em></span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.BirthDate)
                }
            </td>
            <td>
                @if (item.Height == null)
                {
                    <span style="color: #8C8F8F"><em>none</em></span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Height)
                }
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="img-responsive" width=100 height=100 alt="@Html.DisplayFor(modelItem => item.Name)">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Executive)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
